{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@template/authentication": ["libs/authentication/src/index.ts"],
      "@template/authorisation": ["libs/authorisation/src/index.ts"],
      "@template/configuration": ["libs/configuration/src/index.ts"],
      "@template/db": ["libs/db/src/index.ts"],
      "@template/feature/authentication": ["libs/feature/authentication/src/index.ts"],
      "@template/feature/authentication/server": ["libs/feature/authentication/src/server.ts"],
      "@template/feature/billing": ["libs/feature/billing/src/index.ts"],
      "@template/feature/billing/server": ["libs/feature/billing/src/server.ts"],
      "@template/feature/dashboard": ["libs/feature/dashboard/src/index.ts"],
      "@template/feature/dashboard/server": ["libs/feature/dashboard/src/server.ts"],
      "@template/feature/settings": ["libs/feature/settings/src/index.ts"],
      "@template/feature/settings/server": ["libs/feature/settings/src/server.ts"],
      "@template/feature/team": ["libs/feature/team/src/index.ts"],
      "@template/feature/team/server": ["libs/feature/team/src/server.ts"],
      "@template/ui/email": ["libs/ui/email/src/index.ts"],
      "@template/ui/web": ["libs/ui/web/src/index.ts"],
      "@template/ui/web/server": ["libs/ui/web/src/server.ts"],
      "@template/utility/email": ["libs/utility/email/src/index.ts"],
      "@template/utility/payment": ["libs/utility/payment/src/index.ts"],
      "@template/utility/schema": ["libs/utility/schema/src/index.ts"],
      "@template/utility/shared": ["libs/utility/shared/src/index.ts"],
      "@template/utility/trpc": ["libs/utility/trpc/src/index.ts"],
      "@template/utility/trpc-next-client": ["libs/utility/trpc-next-client/src/index.ts"],
      "@template/utility/trpc-next-server": ["libs/utility/trpc-next-server/src/index.ts"],
      "@template/utility/trpc-next-server/server": ["libs/utility/trpc-next-server/src/server.ts"]
    }
  },
  "include": ["./types/*.d.ts"],
  "exclude": ["node_modules", "tmp"]
}
